{% extends 'base.html.twig' %}

{% block title %}Situation{% endblock %}

{% block body %}
    <h1>Situation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ situation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ situation.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ situation.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ situation.createdAt ? situation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ situation.updatedAt ? situation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('situation_index') }}">back to list</a>

    <a href="{{ path('situation_edit', {'id': situation.id}) }}">edit</a>

    {{ include('situation/_delete_form.html.twig') }}
