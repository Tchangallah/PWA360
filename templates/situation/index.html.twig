{% extends 'base.html.twig' %}

{% block title %}Situation index{% endblock %}

{% block body %}
    <h1>Situation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for situation in situations %}
            <tr>
                <td>{{ situation.id }}</td>
                <td>{{ situation.titre }}</td>
                <td>{{ situation.description }}</td>
                <td>{{ situation.createdAt ? situation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ situation.updatedAt ? situation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('situation_show', {'id': situation.id}) }}">show</a>
                    <a href="{{ path('situation_edit', {'id': situation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('situation_new') }}">Create new</a>
{% endblock %}
